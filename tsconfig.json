{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./node_modules",
    "./history"
  ],
  "include": [
    "js/**/*",
    "spec/**/*"
  ]
}